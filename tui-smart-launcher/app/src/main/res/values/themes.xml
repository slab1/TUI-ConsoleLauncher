<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TUISmartLauncher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/terminal_text</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/terminal_background</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/terminal_background</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/terminal_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <!-- Terminal text style -->
    <style name="TerminalText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/terminal_text</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- Input field style -->
    <style name="TerminalInput">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/terminal_input</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
